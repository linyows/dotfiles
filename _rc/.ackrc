--ignore-case

--sort-files
--follow
--color
--group

--type-add=html=.html.erb,.html.haml
--type-add=css=.sass,.less,.scss,.styl
--type-add=js=.js.erb,.js.coffee

--type-set=json=.json
--type-set=rake=.rake
--type-set=rb=.rb
--type-set=txt=.txt
--type-set=md=.md
--type-set=textile=.textile
--type-set=coffee=.coffee
--type-set=slim=.slim
--type-set=scss=.scss
--type-set=less=.less
--type-set=erb=.erb
--type-set=haml=.haml
--type-set=scaml=.scaml
--type-set=yaml=.yaml,.yml
--type-set=feature=.feature
--type-set=gemspec=.gemspec

--ignore-dir=vendor
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=doc
--ignore-dir=bin
--ignore-dir=coverage
--ignore-dir=spec/fixtures
--ignore-dir=spec/factories
--ignore-dir=public/assets
